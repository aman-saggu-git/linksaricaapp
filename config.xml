<?xml version='1.0' encoding='utf-8'?>
<widget id="com.linksafrica.mobileapp" version="11.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>LinksAfrica.net</name>
    <description>
        Links Africa offers exclusive advertisement and promotional services
    </description>
    <author email="linksafrica2017@gmail.com" href="http://phonegap.com">
        LinksAfrica Team
    </author>
    <content src="index.html" />
    <access launch-external="yes" origin="whatsapp:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="SplashScreenDelay" value="10000" />
    <icon src="icon.png" />
    
        <!-- iPhone 6 / 6+ -->
    <icon src="icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <!--<icon src="icon-60.png" platform="ios" width="60" height="60" />-->
    <icon src="icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icon-76.png" platform="ios" width="76" height="76" />
    <icon src="icon-76@2x.png" platform="ios" width="152" height="152" />
