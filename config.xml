        <splash density="port-xxxhdpi" src="www/res/screen/android/drawable-port-xxxhdpi-screen.jpg" />
    </platform>
    <platform name="ios">
        <splash height="1136" platform="ios" src="www/res/screen/ios/Default-568h@2x~iphone.jpg" width="640" />
        <splash height="1334" platform="ios" src="www/res/screen/ios/Default-667h.jpg" width="750" />
